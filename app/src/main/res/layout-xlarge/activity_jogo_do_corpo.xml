<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fase_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:weightSum="1"
    tools:context="com.dev2.sa.sistemaacessibilidade.activities.JogoDosVizinhosActivity"><![CDATA[
    android:gravity="bottom"> ]]>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pontuação: "
            android:textSize="24sp"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/txtPonto"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="900dp"
        android:layout_height="800dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/opcao2">

        <LinearLayout
            android:id="@+id/box_perna"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            tools:tag="Perna"
            android:layout_alignTop="@+id/linearLayout8"
            android:layout_alignRight="@+id/linearLayout9"
            android:layout_alignEnd="@+id/linearLayout9"></LinearLayout>

        <LinearLayout
            android:id="@+id/box_pes"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            android:tag="Pes"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignLeft="@+id/linearLayout7"
            android:layout_alignStart="@+id/linearLayout7"
            android:layout_below="@+id/linearLayout7"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="110dp"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            tools:tag="Joelho"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignBottom="@+id/linearLayout7"
            android:layout_alignLeft="@+id/linearLayout5"
            android:layout_alignStart="@+id/linearLayout5"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            tools:tag="Coxa"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignEnd="@+id/linearLayout6"
            android:layout_alignRight="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout6"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="60dp"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            tools:tag="Mao"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignTop="@+id/linearLayout5"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_toLeftOf="@+id/linearLayout5"
            android:layout_toStartOf="@+id/linearLayout5"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            tools:tag="Braco"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_below="@+id/linearLayout4"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/linearLayout4"
            android:layout_toRightOf="@+id/linearLayout4"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            tools:tag="Ombro"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@color/quadrado"
            android:orientation="horizontal"
            tools:tag="Cabeca"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toLeftOf="@+id/box_pes"
            android:layout_toStartOf="@+id/box_pes"></LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/corpo"
            android:layout_alignBottom="@+id/box_pes" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/opcao2"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.0"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/palavra_cabeca"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/cabeca" />

        <ImageView
            android:id="@+id/palavra_pes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/pes" />

        <ImageView
            android:id="@+id/palavra_mao"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/mao" />

        <ImageView
            android:id="@+id/palavra_perna"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/perna" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/opcao1"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/opcao2"
        android:layout_toRightOf="@+id/opcao2"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/palavra_ombro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ombro" />

        <ImageView
            android:id="@+id/palavra_joelho"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/joelho" />

        <ImageView
            android:id="@+id/palavra_braco"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/braco" />

        <ImageView
            android:id="@+id/palavra_coxa"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/coxa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toLeftOf="@+id/opcao1"
        android:layout_toStartOf="@+id/opcao1"
        android:id="@+id/linearLayout3"></LinearLayout>


</RelativeLayout>

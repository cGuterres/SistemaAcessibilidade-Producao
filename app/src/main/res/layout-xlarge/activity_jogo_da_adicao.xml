<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fase_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:weightSum="1"
    tools:context="com.dev2.sa.sistemaacessibilidade.JogoDosVizinhosActivity"><![CDATA[
    android:gravity="bottom">





    ]]>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pontuação: "
            android:textSize="24sp"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/txtPonto"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colRigth"
        android:layout_width="105dp"
        android:layout_height="500dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout"
        android:layout_gravity="right"
        android:layout_weight="0.24"
        android:background="@color/pastel"
        android:gravity="right"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/primeiroD"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="0.20"
            android:background="@color/quadradosequen"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="25dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/segundoD"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:background="@color/quadrado"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="25dp" />

        <LinearLayout
            android:id="@+id/terceiroD"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="0.26"
            android:background="@color/quadradosequen"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="25dp" />

        <LinearLayout
            android:id="@+id/quartoD"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="0.29"
            android:background="@color/quadrado"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/colCenter"
        android:layout_width="130dp"
        android:layout_height="500dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/colRigth"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/colim1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/colCNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/somacinco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"

            android:orientation="horizontal"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/ColCNum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:visibility="visible"
                app:srcCompat="@drawable/somadois" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"

            android:orientation="horizontal"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/ColCNum3"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:visibility="visible"
                app:srcCompat="@drawable/somaseis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"

            android:orientation="horizontal"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/ColCNum4"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:visibility="visible"
                app:srcCompat="@drawable/somaum" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/opcao2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/colRigth"
        android:layout_weight="0.0"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/op1_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/num4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/numerocinco" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/op1_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/num3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/numeroseis" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/opcao1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/colRigth"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/op1_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/num1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/numerodezoito" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/op1_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/num2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/numerooito" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_fases"
    tools:context="com.dev2.sa.sistemaacessibilidade.TelaActivity">


    <TextView
        android:id="@+id/JogodaPá"
        android:layout_width="197dp"
        android:layout_height="47dp"
        android:text="Jogo das Pás"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/jogo_das_pas"
        android:layout_marginRight="45dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="358dp" />

    <TextView
        android:id="@+id/JogodoNome"
        android:layout_width="266dp"
        android:layout_height="52dp"
        android:text="Jogo dos Nomes"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/jogo_de_ordenar"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="593dp"
        android:layout_height="108dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/manu" />

    <Button
        android:id="@+id/jogo_das_pas"
        android:layout_width="142dp"
        android:layout_height="128dp"
        android:layout_alignEnd="@+id/Menu"
        android:layout_alignRight="@+id/Menu"
        android:layout_alignTop="@+id/fase_2"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="379dp"
        android:background="@drawable/icopa"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/jogo_de_ordenar"
        android:layout_width="142dp"
        android:layout_height="128dp"
        android:layout_alignEnd="@+id/Menu"
        android:layout_alignRight="@+id/Menu"
        android:layout_alignTop="@+id/fase_3"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="379dp"
        android:background="@drawable/icopala"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jogo_de_ordenar_palavra"
        android:layout_width="142dp"
        android:layout_height="128dp"
        android:layout_alignEnd="@+id/Menu"
        android:layout_alignRight="@+id/Menu"
        android:layout_alignTop="@+id/fase_4"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="153dp"
        android:background="@drawable/icocasa"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/jogo_das_frutas"
        android:layout_width="142dp"
        android:layout_height="128dp"
        android:layout_alignEnd="@+id/jogo_das_pas"
        android:layout_alignRight="@+id/jogo_das_pas"
        android:layout_below="@+id/fase_1"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="153dp"
        android:layout_weight="1"
        android:background="@drawable/apple_fruit_fruits_20616"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jogodasfruta"
        android:layout_width="230dp"
        android:layout_height="49dp"
        android:text="Jogo das Frutas"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="295dp" />

    <TextView
        android:id="@+id/jogodasletra"
        android:layout_width="213dp"
        android:layout_height="46dp"
        android:text="Jogo das letras"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="299dp" />

    <!--android:background="@drawable/check" busca o xml com os icones-->
    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="87dp"
        android:layout_height="78dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/check"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="botaonmute"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/outra_fase"
        android:layout_width="177dp"
        android:layout_height="75dp"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/seta_volta"
        android:onClick="eventosFases"
        android:text="Próxima"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="784dp"
        tools:layout_editor_absoluteX="401dp" />

</android.support.constraint.ConstraintLayout>

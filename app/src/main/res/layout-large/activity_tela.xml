<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_fases"
    tools:context="com.dev2.sa.sistemaacessibilidade.TelaActivity">


    <TextView
        android:id="@+id/JogoSoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="26dp"
        android:text="Jogo da Soma"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogodaAdicao" />

    <Button
        android:id="@+id/jogodaAdicao"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="286dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/icosoma"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="eventosFases"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JogodoNome"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Jogodovisinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="27dp"
        android:text="Jogo dos Visinhos"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/JogodaPá"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:text="Jogo das Pás"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/jogo_das_pas"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/JogodoNome"
        android:layout_width="279dp"
        android:layout_height="46dp"
        android:text="Jogo dos Nomes"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/jogo_de_ordenar"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/jogodasletra"
        android:layout_width="231dp"
        android:layout_height="42dp"
        android:text="Jogo das letras"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/jogo_de_ordenar_palavra"
        android:layout_marginLeft="368dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/jogodasfruta"
        android:layout_width="243dp"
        android:layout_height="42dp"
        android:text="Jogo das Frutas"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/jogo_das_frutas"
        android:layout_marginRight="308dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="579dp"
        android:layout_height="109dp"
        app:srcCompat="@drawable/manu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.6" />

    <Button
        android:id="@+id/jogo_dos_vizinhos"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="221dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icovisinhos"
        android:onClick="eventosFases"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/jogo_das_pas"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/Menu"
        android:layout_alignRight="@+id/Menu"
        android:layout_alignTop="@+id/fase_2"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="337dp"
        android:background="@drawable/icopa"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/jogo_de_ordenar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/Menu"
        android:layout_alignRight="@+id/Menu"
        android:layout_alignTop="@+id/fase_3"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="337dp"
        android:background="@drawable/icopala"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jogo_de_ordenar_palavra"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/Menu"
        android:layout_alignRight="@+id/Menu"
        android:layout_alignTop="@+id/fase_4"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="154dp"
        android:background="@drawable/icocasa"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/jogo_das_frutas"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/jogo_das_pas"
        android:layout_alignRight="@+id/jogo_das_pas"
        android:layout_below="@+id/fase_1"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="141dp"
        android:layout_weight="1"
        android:background="@drawable/apple_fruit_fruits_20616"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--android:background="@drawable/check" busca o xml com os icones-->
    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="79dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/check"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="botaonmute"
        android:textOff=""
        android:textOn=""
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp" />


</android.support.constraint.ConstraintLayout>

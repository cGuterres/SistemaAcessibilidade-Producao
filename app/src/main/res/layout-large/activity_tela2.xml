<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_fases"
    tools:context="com.dev2.sa.sistemaacessibilidade.TelaActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="593dp"
        android:layout_height="108dp"
        app:srcCompat="@drawable/manu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0" />


    <Button
        android:id="@+id/jogodaAdicao"
        android:layout_width="156dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/Menu"
        android:layout_alignRight="@+id/Menu"
        android:layout_alignTop="@+id/fase_4"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/icosoma"
        android:onClick="eventosFases"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/vizinhos"
        android:layout_width="170dp"
        android:layout_height="179dp"
        android:layout_alignEnd="@+id/jogo_das_pas"
        android:layout_alignRight="@+id/jogo_das_pas"
        android:layout_below="@+id/fase_1"
        android:layout_marginEnd="8dp"

        android:layout_weight="1"
        android:background="@drawable/icovisinhos"
        android:onClick="eventosFases"
        android:layout_marginLeft="71dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/jogodaAdicao"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="124dp" />

    <TextView
        android:id="@+id/jogodasfruta"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginLeft="29dp"
        android:text="Jogo dos vizinhos"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vizinhos" />

    <TextView
        android:id="@+id/jogodasletra"
        android:layout_width="236dp"
        android:layout_height="42dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="314dp"
        android:text="Jogo da Adição"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--android:background="@drawable/check" busca o xml com os icones-->
    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="87dp"
        android:layout_height="78dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/check"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="botaonmute"
        android:textOff=""
        android:textOn=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.955" />

    <Button
        android:id="@+id/retorna_fase"
        android:layout_width="161dp"
        android:layout_height="77dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/img_seta"
        android:onClick="eventosFases"
        android:textSize="25px"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="794dp" />

    <Button
        android:id="@+id/jogo_flores"
        android:layout_width="152dp"
        android:layout_height="159dp"
        android:layout_marginLeft="75dp"
        android:background="@drawable/icoflor"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="eventosFases"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/jogodasfruta"
        app:layout_constraintRight_toLeftOf="@+id/jogo_memoria"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.075" />

    <TextView
        android:id="@+id/botao_jogo_das_flores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo das flores"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="30sp"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="1082dp"
        app:layout_constraintTop_toBottomOf="@+id/jogo_flores" />


    <Button
        android:id="@+id/jogo_memoria"
        android:layout_width="215dp"
        android:layout_height="176dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/icogato"
        android:onClick="eventosFases"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogodasletra"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.902" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="224dp"
        android:layout_height="41dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="17dp"
        android:text="Jogo das flores"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="31sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogo_flores"
        app:layout_constraintRight_toLeftOf="@+id/textView6"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:text="Jogo da memória"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogo_memoria"
        android:textColor="?android:attr/actionMenuTextColor"
        android:textSize="31sp"/>


</android.support.constraint.ConstraintLayout>

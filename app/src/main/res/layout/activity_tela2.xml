<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_fases"
    tools:context="com.dev2.sa.sistemaacessibilidade.TelaActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/manu"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="1.0" />


        <Button
            android:id="@+id/jogodaAdicao"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignEnd="@+id/Menu"
            android:layout_alignRight="@+id/Menu"
            android:layout_alignTop="@+id/fase_4"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="87dp"
            android:background="@drawable/icosoma"
            android:onClick="eventosFases"
            app:layout_constraintHorizontal_bias="0.823"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/vizinhos"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignEnd="@+id/jogo_das_pas"
            android:layout_alignRight="@+id/jogo_das_pas"
            android:layout_below="@+id/fase_1"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"

            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="75dp"
            android:layout_weight="1"
            android:background="@drawable/icovisinhos"
            android:onClick="eventosFases"
            app:layout_constraintHorizontal_bias="0.147"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jogodasfruta"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="187dp"
            android:text="Jogo dos Vizinhos"
            android:textColor="?android:attr/actionMenuTextColor"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jogodasletra"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="187dp"
            android:text="Jogo da Soma"
            android:textColor="?android:attr/actionMenuTextColor"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--android:background="@drawable/check" busca o xml com os icones-->
        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/check"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="botaonmute"
            android:textOff=""
            android:textOn=""
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.974" />

        <Button
            android:id="@+id/retorna_fase"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/img_seta"
            android:onClick="eventosFases"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/jogo_flores"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/icoflor"
            android:onClick="eventosFases"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jogodasfruta" />

        <Button
            android:id="@+id/jogo_memoria"
            android:layout_width="120dp"
            android:layout_height="95dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/icogato"
            android:onClick="eventosFases"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintLeft_toRightOf="@+id/jogo_flores"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/jogodasletra" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="170dp"
            android:layout_height="33dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Jogo da MemÃ³ria"
            android:textColor="?android:attr/actionMenuTextColor"
            android:textSize="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jogo_memoria"
            app:layout_constraintVertical_bias="0.042"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="148dp"
            android:layout_height="29dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Jogo das flores"
            android:textColor="?android:attr/actionMenuTextColor"
            android:textSize="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jogo_flores"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.068" />
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/fase_3"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/pastel"
android:baselineAligned="false"
android:orientation="vertical"
android:paddingLeft="6dp"
android:paddingRight="6dp"
android:weightSum="1"
tools:context="com.dev2.sa.sistemaacessibilidade.JogoDosVizinhosActivity"><![CDATA[
    android:gravity="bottom">





    ]]>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:id="@+id/linearLayout"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Pontuação: "
        android:textSize="24sp"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/txtPonto"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/opcao2"
        android:layout_marginBottom="21dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/linearLayout8"
            android:layout_marginBottom="13dp"
            android:layout_alignRight="@+id/linearLayout9"
            android:layout_alignEnd="@+id/linearLayout9"></LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"></LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout7"
            android:layout_alignLeft="@+id/linearLayout7"
            android:layout_alignStart="@+id/linearLayout7"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="39dp"
            android:id="@+id/linearLayout8"></LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/linearLayout7"
            android:layout_alignLeft="@+id/linearLayout5"
            android:layout_alignStart="@+id/linearLayout5"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/linearLayout9"></LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout6"
            android:layout_alignRight="@+id/linearLayout6"
            android:layout_alignEnd="@+id/linearLayout6"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="38dp"
            android:id="@+id/linearLayout7"></LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/linearLayout5"
            android:layout_toLeftOf="@+id/linearLayout5"
            android:layout_toStartOf="@+id/linearLayout5"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="13dp"
            android:id="@+id/linearLayout6"></LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout4"
            android:layout_toRightOf="@+id/linearLayout4"
            android:layout_toEndOf="@+id/linearLayout4"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="19dp"
            android:id="@+id/linearLayout5"></LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp"
            android:id="@+id/linearLayout4"></LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            app:srcCompat="@drawable/corpo"
            android:layout_marginTop="62dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/opcao2"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.0"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            app:srcCompat="@drawable/cabeca" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            app:srcCompat="@drawable/pes" />

        <ImageView
            android:id="@+id/num3"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:src="@drawable/mao" />

        <ImageView
            android:id="@+id/num4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:src="@drawable/perna" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/opcao1"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/opcao2"
        android:layout_toRightOf="@+id/opcao2"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ombro" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/joelho" />

        <ImageView
            android:id="@+id/num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/braco" />

        <ImageView
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/coxa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toLeftOf="@+id/opcao1"
        android:layout_toStartOf="@+id/opcao1"
        android:id="@+id/linearLayout3"></LinearLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fase_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1"
    tools:context="com.dev2.sa.sistemaacessibilidade.JogoDeOrdernarActivity"><![CDATA[
    android:gravity="bottom">

    ]]>

    <ImageView
        android:id="@+id/casinha"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0.24"
        android:adjustViewBounds="true"
        android:src="@drawable/casinha" />

    <LinearLayout
        android:id="@+id/yellowLayout"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_weight="0.33"
        android:background="@color/pastel"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/primeiro"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_weight="0.24"
            android:background="@color/quadrado"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/segundo"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_weight="0.15"
            android:background="@color/quadradosequen"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/terceiro"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_weight="0.17"
            android:background="@color/quadrado"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/quarto"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_weight="0.19"
            android:background="@color/quadradosequen"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/quinto"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_weight="0.24"
            android:background="@color/quadrado"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/sexto"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_weight="0.24"
            android:background="@color/quadradosequen"
            android:gravity="center"
            android:orientation="vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.24"
        android:background="@color/pastel"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/top6"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letraa"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/letraa" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top5"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letraa"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/letraa" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top4"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letraa"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/letraa" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/pastel"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/top3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letrac"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/letrac" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letras"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/letras" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letraa1"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="1dp"
                android:src="@drawable/letraa1" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

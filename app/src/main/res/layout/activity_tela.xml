<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev2.sa.sistemaacessibilidade.TelaActivity"
    android:background="#87CEFF">


        <TextView
            android:id="@+id/Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Escolha o jogo"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#FF0000"
            />

        <Button
            android:id="@+id/jogo_das_pas"
            android:layout_width="140dp"
            android:layout_height="49dp"
            android:layout_alignEnd="@+id/Menu"
            android:layout_alignRight="@+id/Menu"
            android:layout_alignTop="@+id/fase_2"
            android:layout_marginEnd="10dp"
            android:onClick="eventosFases"
            android:text="Jogo das pÃ¡s"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Menu"
            app:layout_constraintHorizontal_bias="0.916" />

        <Button
            android:id="@+id/jogo_das_frutas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/jogo_das_pas"
            android:layout_alignRight="@+id/jogo_das_pas"
            android:layout_below="@+id/fase_2"
            android:onClick="eventosFases"
            android:text="Jogo das frutas"

            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Menu"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.095" />


</android.support.constraint.ConstraintLayout>

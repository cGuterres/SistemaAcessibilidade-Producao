<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev2.sa.sistemaacessibilidade.TelaActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageButton
            android:id="@+id/fase_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:onClick="eventosFases"
            android:scaleType="fitCenter"
            android:src="@drawable/pa_vermelha"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="188dp"
            android:layout_alignTop="@+id/fase_2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp" />

        <ImageButton
            android:id="@+id/fase_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:onClick="eventosFases"
            android:scaleType="fitCenter"
            android:src="@drawable/pa_azul"
            tools:layout_editor_absoluteX="265dp"
            tools:layout_editor_absoluteY="188dp"
            android:layout_below="@+id/Menu"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="108dp" />

        <TextView
            android:id="@+id/Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="43dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
